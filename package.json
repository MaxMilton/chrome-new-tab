{
  "private": true,
  "name": "new-tab",
  "version": "0.14.0",
  "description": "âš¡ A high performance new tab page that gets you where you need to go faster.",
  "homepage": "https://github.com/MaxMilton/new-tab",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "chrome",
    "google-chrome",
    "maxmilton",
    "new-tab-page",
    "ntp",
    "svelte"
  ],
  "scripts": {
    "dev": "rollup --config --watch",
    "build": "NODE_ENV=production rollup --config",
    "prebuild": "rm -rf dist && mkdir dist && cp icon* dist",
    "lint:md": "remark --frail --quiet .",
    "lint": "yarn lint:md && yarn lint:css && yarn lint:js && yarn lint:types",
    "FIXME__lint:css": "stylelint **/*.{css,html,js,md,svelte,svg,ts} --report-needless-disables",
    "lint:css": "stylelint **/*.{css,html,js,md,svelte,svg,ts}",
    "lint:js": "eslint --ext html,js,md,mjs,svelte,svg,ts .",
    "lint:types": "tsc --noEmit --allowJs --checkJs",
    "test": "jest --notify --watch",
    "test:e2e": "jest --config test/e2e/jest.config.js",
    "test-ci": "jest --runInBand --ci --coverage",
    "FIXME__posttest-ci": "jest --runInBand --ci --config test/e2e/jest.config.js"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.12.1",
    "@types/chrome": "0.0.91",
    "@types/expect-puppeteer": "3.3.3",
    "@types/jest-environment-puppeteer": "4.3.1",
    "@types/puppeteer": "1.20.3",
    "@wearegenki/renovate-config": "1.0.0",
    "codacy-coverage": "3.4.0",
    "eslint": "6.6.0",
    "jest": "24.9.0",
    "jest-puppeteer": "4.3.0",
    "minna-tools": "0.34.1",
    "minna-ui": "0.34.1",
    "postcss": "7.0.21",
    "postcss-scss": "2.0.0",
    "prettier": "1.19.1",
    "puppeteer": "2.0.0",
    "remark-cli": "7.0.1",
    "rollup": "1.27.2",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-svelte": "5.1.1",
    "rollup-plugin-typescript": "1.0.1",
    "stylelint": "12.0.0",
    "svelte": "3.15.0",
    "tslib": "1.10.0",
    "typescript": "3.7.2"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "postcss": {
    "map": false,
    "plugins": {
      "minna-ui/postcss": {
        "unsafe": true
      }
    },
    "syntax": "postcss-scss"
  },
  "prettier": "minna-tools/prettier",
  "eslintConfig": {
    "root": true,
    "extends": [
      "./node_modules/minna-tools/eslint.js"
    ],
    "env": {
      "webextensions": true
    },
    "globals": {
      "page": true,
      "browser": true,
      "context": true,
      "jestPuppeteer": true
    },
    "rules": {
      "dot-notation": "off"
    }
  },
  "eslintIgnore": [
    "**/dist/**",
    "**/node_modules/**",
    "/test/coverage/**"
  ],
  "stylelint": {
    "extends": "minna-tools/stylelint",
    "ignoreFiles": [
      "**/*.d.ts",
      "**/dist/**",
      "**/node_modules/**",
      "test/coverage/**"
    ],
    "rules": {
      "color-no-hex": null,
      "scale-unlimited/declaration-strict-value": null,
      "selector-max-id": null
    }
  },
  "remarkConfig": {
    "plugins": [
      "minna-tools/remark"
    ]
  },
  "jest": {
    "preset": "minna-tools",
    "setupFiles": [
      "./test/__setup__.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{svelte,ts}",
      "!src/app.ts",
      "!src/settings.ts"
    ]
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "engines": {
    "node": ">12.0.0"
  }
}
